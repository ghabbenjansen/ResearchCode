<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>research-code</artifactId>
        <groupId>com.raffaeleconforti</groupId>
        <version>1.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>modified-miners</artifactId>
    <packaging>bundle</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-ClassPath>.,{maven-dependencies},WEB-INF/classes</Bundle-ClassPath>
                        <Bundle-Name>Modified-Miners OSGI</Bundle-Name>
                        <Bundle-SymbolicName>com.raffaeleconforti.modified-miners</Bundle-SymbolicName>
                        <Import-Package>
                            *
                        </Import-Package>
                        <Export-Package>
                            com.raffaeleconforti.*
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/lib</outputDirectory>
                            <overWriteIfNewer>true</overWriteIfNewer>
                            <excludeTransitive>false</excludeTransitive>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.deckfour.xes</groupId>
            <artifactId>OpenXES</artifactId>
            <version>6.5</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>colt</artifactId>
            <version>6.5</version>
        </dependency>

        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>prom6-contexts</artifactId>
            <version>6.5</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>prom6-framework</artifactId>
            <version>6.5</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>prom6-models</artifactId>
            <version>6.5</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>prom6-plugins</artifactId>
            <version>6.5</version>
        </dependency>

        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>petrinets</artifactId>
            <version>6.5</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>ilpminer</artifactId>
            <version>6.5</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>oplall</artifactId>
            <version>6.5</version>
        </dependency>

        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>log</artifactId>
            <version>6.5</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>logabstractions</artifactId>
            <version>6.5</version>
        </dependency>

        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>prom5-lib</artifactId>
            <version>6.5</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>prom5-plugins</artifactId>
            <version>6.5</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>prom5-models</artifactId>
            <version>6.5</version>
        </dependency>
        <dependency>
